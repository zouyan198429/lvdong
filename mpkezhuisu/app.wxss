/* 公共表单  */

.group{
	display: block;
	width: 100%;
  background: #fff;
}

.group-header{
	display: flex;
	padding: 0 20rpx;
	line-height: 80rpx;
	background: #f2f2f2;
  font-size: 32rpx;
}

.group-body{
  
}

.input-item{
	padding: 20rpx 0;
	line-height: 2;
	display: flex;
	font-size: 30rpx;
}

.group-body .input-list{
	margin: 0;
	border: none;
}

.input-list{
	padding: 0 20rpx;
	margin: 20rpx 0;
	background: #fff;
}

.input-item-label{
	display: block;
	width: 5em;
	color: #666;
}

.input-item-content{
	color: #333;
	flex:1;
}



/* 图片上传 */
 
.lable-full {
  width: 100%;
}

.img-upload{
	padding:0rpx;
	font-size: 0;
	overflow: hidden;
}
.img-upload .img-item,
.img-upload .img-add{
	width: 160rpx;
	height: 160rpx;
	float: left;
	margin: 10rpx;
	border: 1rpx solid transparent;
}
.img-upload .img-add {
	border: 1rpx dashed #ddd;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.img-upload .img-add image {
  width:80rpx; 
  height: 80rpx;
}
.img-upload .img-item image{
	width: 160rpx;
  height: 160rpx;
}
.img-upload .img-item{
	position: relative;
}
.img-upload .img-item icon{
	position: absolute;
	right: -12rpx;
	top: -12rpx;
}






.cominfo-text{
	padding: 20rpx;
