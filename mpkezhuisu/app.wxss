/**app.wxss**/


textarea { 
  width:100%; 
  border:1rpx solid #ddd;
  font-size: 32rpx;
  line-height: 160%;
  padding:15rpx 5rpx;
}


.c { clear:both; width: 100%; height: 1rpx;   }
