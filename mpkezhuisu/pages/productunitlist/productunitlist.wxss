/* pages/itemlist/productlist.wxss */
.listcontainer {
  background: #f5f5f5;
}
.listli {
  display: block;
  border:1px solid #eee;
  border-radius: 0.5rem;
  margin:1rem auto;
  position: relative;
  width: 100%;
}
.listpicb {
  float: left;
  border:1px solid #ddd;
  text-align: center;
  overflow: hidden;
  margin-left: 0.5rem;
  margin-top:0.5rem;
  width: 3.6rem;
  height: 3.6rem;
}
.listpicb image {
  width: 3.6rem;
  min-height:3.6rem;
  max-height: 6rem;
  margin-top:-50%;
  margin-bottom:-50%;
}
.listhd {
  float: left;
  margin-left:0.5rem;
  margin-top:0.5rem;
}
.listtitle {
  font-size: 1rem;
}
.jidi {
  font-size: 0.75rem;
  color: #999;
}
.state {
  position: absolute;
  right: 2rem;
  top:3rem;
  border:2px solid #f30;
  width: 3rem;
  height: 3rem;
  border-radius: 2rem;
  line-height: 3rem;
  display: none;
}
.listcon {
  clear: both;
  width: 100%;
  padding-left:0.25rem;
}
.pinpai {
  font-size: 0.75rem;
  color: #999;
  padding:0;
  margin:0;
  line-height: 140%;
}
.pici {
  font-size: 0.75rem;
  color: #999;
  padding:0;
  margin:0;
  line-height: 140%;
}
.addtime {
  font-size: 0.75rem;
  color: #999;
  padding:0;
  margin:0;
  line-height: 140%;
}

.count { 
  clear: both;
  width: 100%;
  background: #f5f5f5;
  height: 2rem;
  text-indent: 0.5rem;
  font-size: 0.75rem;
}
.countli {
  display: inline-block;
  width: 28%;
  font-size: 0.75rem;
  color: #333;
  line-height: 2rem;
}

.fb {
  clear: both;
  width: 100%;
  text-align: right;
  height: 2.5rem;
  line-height: 2rem;
}
.views {
  float: left;
  font-size: 0.75rem;
  padding:0.2rem 0.5rem;
}
.btna {
  display: inline-block;
  text-align: right;
  font-size: 0.75rem;
  width: auto;
  padding:0.2rem 0.5rem;
  border:1px solid #ddd;
  border-radius: 0.2rem;
  margin:0.3rem 10rpx 0 10rpx;
  height: 1.25rem;
  line-height: 1.25rem;
  color: #555;
}