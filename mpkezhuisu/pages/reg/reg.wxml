<!--pages/reg/reg.wxml-->
<view class="container">
		<view class="group">
      <view class="group-header">登录帐号</view>
			<view class="group-body">
            <view class="input-list">
                    <view class="input-item">
                      <text class="input-item-label">手机号码</text>
                      <view class="input-item-content">
                        <input type="text" placeholder="请输入手机号码" auto-focus ></input>
                      </view>
                    </view>
                    <view class="input-item">
                      <text class="input-item-label">密码</text>
                      <view class="input-item-content">
                        <input type="text" placeholder="请输入密码"></input>
                      </view>
                    </view>
                    <view class="input-item">
                      <text class="input-item-label">确认密码</text>
                      <view class="input-item-content">
                        <input type="text" placeholder="再次输入密码"></input>
                      </view>
                    </view>
            </view>
      </view>
    </view>

    <view class='group'>
      <view class="group-header">企业信息</view>
			<view class="group-body">

				<view class="input-list">
              <view class="input-item">
                <text class="input-item-label">企业全称</text>
                <view class="input-item-content">
                  <input type="text" placeholder="请输入企业全称"></input>
                </view>
              </view>
              <view class="input-item">
                <text class="input-item-label">企业简称</text>
                <view class="input-item-content">
                  <input type="text" placeholder="请输入企业简称" maxlength="16" ></input>
                </view>
              </view>
              <view class="input-item">
                <text class="input-item-label">公司地址</text>
                <view class="input-item-content">
                  <input type="text" placeholder="请输入公司地址" ></input>
                </view>
              </view>
              <view class="input-item">
                <text class="input-item-label">所在地区</text>
                <view class="input-item-content">
                    <picker bindchange="bindPickerChange" data-pickername="industry" value=""  mode="selector">省份</picker>
                    <picker bindchange="bindPickerChange" data-pickername="industry" value=""  mode="selector">城市</picker>
                </view>
              </view>  
				  </view>

			</view>
    </view>
  <view class='group'>
    <view class="btn-submit">
      <button class="btn-block btn-orange" bindtap="regclick">注册</button>
    </view>
  </view>

    <view class="cominfo-text">
      <text>如果已经注册过，请点击登录</text>
      <view class='k'></view>
      <view class='k'></view>
      <navigator url="../login/login" class="linktext"  >会员登录</navigator>
    </view>


  </view>


