<!--pages/reg/reg.wxml-->
<view class="container">
      <view class='sysheader'>
            <image src='http://ofn8u9rp0.bkt.clouddn.com/logo4.png' class='logopic' />
      </view>
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class='loginbox'>
          <view class="group">
              <view class="group-body">
                      <view class="input-list">
                          <view class="input-item">
                                <text class="input-item-label">手机号码</text>
                                <view class="input-item-content">
                                      <input type="number"  maxlength="11"  placeholder="请输入手机号码" focus="{{focus}}" name="company_mobile" ></input>
                                </view>
                          </view>
                          <view class="input-item">
                                <text class="input-item-label">密码</text>
                                <view class="input-item-content">
                                      <input type="text" password placeholder="请输入密码" name="account_password" ></input>
                                </view>
                          </view>
                          <view class="input-item">
                                <text class="input-item-label">确认密码</text>
                                <view class="input-item-content">
                                      <input type="text" password placeholder="再次输入密码"  name="sure_password"></input>
                                </view>
                          </view>
                          <view class="input-item">
                                <text class="input-item-label">用户名</text>
                                <view class="input-item-content">
                                    <input type="text" placeholder="可输入真名或昵称"  name="real_name" ></input>
                                </view>
                          </view>
                          <view class="input-item">
                                <text class="input-item-label">企业全称</text>
                                <view class="input-item-content">
                                    <input type="text" placeholder="请输入企业全称"  name="company_name" ></input>
                                </view>
                          </view>           
                      </view>
                </view>

                <view class="btn-submit">
                    <button class="btn-block btn-green" formType="submit">注册</button>
                </view>
                <view class="input-item noline">
                  <text class="input-tips"  style='text-indent:1rem;'>* 点击注册即表示您已阅读并同意我方 </text>
                  <navigator url="../system/agreement/agreement"  >《服务协议》</navigator>
                </view>
          </view>
      </view>
      </form>
      
    <view class="cominfo-text">
          
          <text>如果已经注册过，请点击登录</text>
          <view class='k'></view>
          <view class='k'></view>
          <navigator url="../login/login" class="linktext"  >会员登录</navigator>
    </view>


</view>

